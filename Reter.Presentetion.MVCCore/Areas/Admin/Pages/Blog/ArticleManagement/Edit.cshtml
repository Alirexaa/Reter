@page "{id}"
@model Reter.Presentation.MVCCore.Areas.Admin.Pages.Blog.ArticleManagement.EditModel
@{
}

<div class="card">
    <div class="card-header">
        <h2>Edit Article</h2>
    </div>

    <div class="card-header">
        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Article.Title" class="control-label">Title:</label>
                        <input asp-for="Article.Title" class="form-control" name="Title" />
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Article.ShortDescription" class="control-label">ShortDescription:</label>
                        <input asp-for="Article.ShortDescription" class="form-control" name="ShortDescription"  />
                    </div>
                </div>

                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Article.Image" class="control-label">Image:</label>
                        <input asp-for="Article.Image" class="form-control" name="Image"  rows="3"/>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Article.Content" class="control-label">Content:</label>
                        <textarea asp-for="Article.Content" class="form-control" name="Content"  rows="7"></textarea>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <label asp-for="Article.ArticleCategoryId" class="control-label">Category:</label>
                        <select asp-for="Article.ArticleCategoryId" id="ArticleCategoryId" name="ArticleCategoryId" asp-items="Model.ArticleCategories" class="form-control">
                            <option value="">Select Article Category</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-warning" />
                    <a class="btn btn-dark" asp-page="./List" asp-area="Admin">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>